{
    "name": "darksynx/sublime",
    "description": "Functional & immutable HTML builder for PHP 8.1+",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.1"
    },
    "autoload": {
        "psr-4": {
            "Sublime\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sublime\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "DarkSynx",
            "homepage": "https://github.com/DarkSynx"
        }
    ],
    "homepage": "https://github.com/DarkSynx/Sublime",
    "scripts": {
        "test": "phpunit",
        "cs": "php-cs-fixer fix --dry-run --using-cache=no",
        "cs-fix": "php-cs-fixer fix",
        "stan": "phpstan analyse src tests"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.59"
    },
    "config": {
        "sort-packages": true
    }
}
